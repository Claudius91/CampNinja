<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dojo10"
    tools:context="com.example.sven.ninja_test.Statistik">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Statistic"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/weiß"
        android:shadowColor="@color/schwarz"
        android:shadowRadius="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/benutzer"
        android:text="Player"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/weiß"
        android:shadowColor="@color/schwarz"
        android:shadowRadius="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="Highscore"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/weiß"
        android:shadowColor="@color/schwarz"
        android:shadowRadius="2"
        android:layout_above="@+id/lv"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/benutzer">
    </ListView>
</RelativeLayout>
