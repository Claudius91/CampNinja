<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hell_braun</item>
        <item name="colorPrimaryDark">@color/braun</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/hell_braun</item>
        <item name="android:itemBackground">@color/braun</item>
        <item name="android:alertDialogStyle">@style/YourAlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

    </style>



    <style name="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/hell_braun</item>
        <item name="android:textColorPrimary">@color/braun</item>
        <item name="android:textColor">@color/braun</item>

    </style>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:alertDialogStyle">@style/YourAlertDialogTheme</item>-->
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

    </style>

    <style name="YourAlertDialogTheme">
        <!--<item name="android:buttonBarPositiveButtonStyle">@drawable/dialog_frame_shadow</item>-->
        <item name="colorAccent">@color/braun</item>
        <item name="colorPrimary">@color/hell_braun</item>
        <item name="android:textColor">@color/schwarz</item>
        <item name="android:windowBackground">@drawable/dialog_frame_shadow</item>
        <item name="colorControlNormal">@color/sand</item>
        <item name="autoCompleteTextViewStyle">@color/braun</item>
        <!--<item name="android:windowBackground">@color/braun</item>&ndash;&gt;-->
        <!--<item name="android:windowContentOverlay">@color/hell_braun</item>-->
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowAnimationStyle">@color/hell_braun</item>-->
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowTitleStyle">@color/hell_braun</item>
        <item name="android:textAppearanceMedium">@color/sand</item>
        <item name="android:borderlessButtonStyle">@color/braun</item>
        <item name="android:buttonBarStyle">@color/rot</item>
        <item name="android:textColorPrimary">@color/schwarz</item>
        <!--<item name="android:background">@color/sand</item>-->
        <item name="android:textColorLink">#000000</item>
    </style>

</resources>
